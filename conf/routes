# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /getitems                   controllers.Application.getItems

GET     /edititem                   controllers.Application.editItem(id: Option[Int])

POST    /edititem                   controllers.Application.editItemData

GET     /additem                    controllers.Application.addItem

POST    /additem                    controllers.Application.createItem

GET     /deleteitem                 controllers.Application.deleteItem(id: Option[Int])

POST    /deleteitem                 controllers.Application.deleteItemData

GET     /createperson               controllers.MyController.create

GET     /findperson                 controllers.MyController.findByName

GET     /updateperson               controllers.MyController.update

#GET     /deleteperson               controllers.MyController.delete